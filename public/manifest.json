{
  "name": "Episode Bookmark Manager",
  "description": "Auto bookmark last watched episode of your favourite shows!",
  "version": "1.0.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["history", "bookmarks", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  }
}
